<?php

namespace Tests\Feature\Modules\Backend;

use Tests\TestCase;
use Illuminate\Foundation\Testing\RefreshDatabase;

use HalcyonLaravel\Base\Events\BaseDeletingEvent;
use HalcyonLaravel\Base\Events\BaseDeletedEvent;

use App\Models\DummyClass as Model;


/**
 * Class DummyClassBreadFeatureDeletesBackendTest.
 */
class DummyClassBreadFeatureDeletesBackendTest extends TestCase
{
    use RefreshDatabase;

    public function setUp()
    {
        parent::setUp();
        $this->loginAsAdmin();
        (new \DummyClassPermissionTableSeeder)->run();
        (new \DummyClassTableSeeder)->run();
    }

    public function testDestroy()
    {
        $this->expectsEvents(BaseDeletingEvent::class);
        $this->expectsEvents(BaseDeletedEvent::class);
        
        
        $model = Model::create([
            'title' => 'Salliess',
        ]);


        $response = $this->withHeaders([
            'X-Header' => 'Value',
        ])->json('DELETE', route('admin.dummy-class.destroy', $model));

       
        $response
            ->assertStatus(302)
            ->assertSessionHas('flash_success', 'Salliess has been deleted.')
            ->assertRedirect(route('admin.dummy-class.deleted'));

        $this->assertDatabaseMissing((new Model)->getTable(), [
            'id' => $model->id,
        ]);
 
    }
}

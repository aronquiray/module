{
        "name": "halcyon-laravel/module",
        "description": "Module.",
        "repositories": [{
            "type": "vcs",
             "url": "git@bitbucket.org:halcyonlaravel/base.git"
        }],
        "require": {
            "halcyon-laravel/base":   "^1.0",
                "spatie/laravel-permission": "^2.9",
                "nunomaduro/laravel-console-menu": "^2.0",
                "watson/rememberable": "^2.0"
        },
        "require-dev": {
            "orchestra/testbench": "~3.3.0|~3.4.2|^3.5.0",
            "phpunit/phpunit" : "^5.7|6.2|^7.0",
            "friendsofphp/php-cs-fixer": "^2.10",
            "mockery/mockery": "^1.0",
            "fzaninotto/faker": "^1.7"
        },
        "autoload": {
            "psr-4": {
                "HalcyonLaravel\\Module\\": "src/"
            }
        },
        "autoload-dev": {
            "psr-4": {
                "HalcyonLaravel\\Module\\Tests\\": "tests/",
                "App\\": ["tests/tmp/"]
            }
        },
        "extra": {
            "laravel": {
                "providers": [
                    "HalcyonLaravel\\Module\\Providers\\ModuleServiceProvider"
                ]
            }
        },
        "scripts": { 
            "phpunit": [
                    "./vendor/bin/phpunit --verbose > output.txt -d memory_limit=2048M"
            ],
            "test": "./vendor/bin/phpunit --verbose",
            "format": [
                "./vendor/bin/php-cs-fixer fix src/ --show-progress=estimating",
                "./vendor/bin/php-cs-fixer fix tests/ --show-progress=estimating"
            ]
        }
    }
